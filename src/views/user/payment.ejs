<style>
    :root {
      --primary-color: #2962ff;
      --secondary-color: #72a2f7;
      --background-color: #a2cdff;
      --text-color: #333;
      --text-secondary: #666;
      --border-color: #eee;
      --white: #fff;
      --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --input-background: #fafafa;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    .container {
      width: 100%;
      max-width: 1200px;
      border-radius: 20px;
      box-shadow: var(--card-shadow);
      overflow: hidden;
    }

    .checkout-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem;
    }

    @media (min-width: 768px) {
      .checkout-grid {
        grid-template-columns: 1.5fr 1fr;
      }
    }

    .form-section {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .header {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 2rem;
    }

    .header .logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary-color);
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .form-group label {
      font-weight: 600;
      font-size: 0.9rem;
    }

    .form-group .hint {
      font-size: 0.8rem;
      color: var(--text-secondary);
    }

    .input-wrapper {
      position: relative;
      display: flex;
      align-items: center;
    }

    .input-field {
      width: 100%;
      padding: 0.8rem 1rem;
      border: 1px solid var(--border-color);
      border-radius: 8px;
      font-size: 1rem;
      background: var(--input-background);
      transition: all 0.3s ease;
    }

    .input-field:focus {
      outline: none;
      border-color: var(--primary-color);
      background: var(--white);
    }

    .input-icon {
      position: absolute;
      right: 1rem;
      color: var(--text-secondary);
    }

    .card-preview {
      background: var(--secondary-color);
      padding: 1.5rem;
      border-radius: 12px;
      color: var(--white);
      margin-bottom: 2rem;
    }

    .order-summary {
      background: var(--input-background);
      padding: 1.5rem;
      border-radius: 12px;
    }

    .summary-item {
      display: flex;
      justify-content: space-between;
      margin-bottom: 1rem;
      font-size: 0.9rem;
    }

    .total {
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 2px dashed var(--border-color);
    }

    .total-amount {
      font-size: 1.5rem;
      font-weight: 700;
    }

    .submit-button {
      width: 100%;
      padding: 1rem;
      background: var(--primary-color);
      color: var(--white);
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .submit-button:hover {
      background: #1e4bd8;
    }

    .expiry-date {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    @media (max-width: 480px) {
      .checkout-grid {
        padding: 1rem;
      }
      
      .header {
        margin-bottom: 1rem;
      }
      
      .form-group {
        gap: 0.25rem;
      }
    }
  </style>
