<body>
  <div
    class="flex h-screen bg-gray-50 dark:bg-gray-900"
    :class="{ 'overflow-hidden': isSideMenuOpen }"
  >

    <%- include (`../partials/userSidebar`); -%>

    <div class="flex flex-col flex-1 w-full">
      <%- include (`../partials/userHeader`); -%>

      <main class="h-full overflow-y-auto">
        <div class="container px-6 mx-auto grid">
          <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
            Certificate of Completion
          </h2>
      
          <% if (user) { %>
            <div class="certificate-container" style="position: relative; width: 100%; max-width: 1000px; margin: 0 auto;">
              <!-- Certificate Background Image -->
              <img
                src="../assets/img/certificate.jpg"
                alt="Certificate"
                style="width: 100%; height: auto;"
              >
      
              <!-- Text Overlay -->
              <div class="certificate-content" style="
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                padding: 20px;
                pointer-events: none; /* Prevent interaction with overlay */
              ">
                <!-- User's Name -->
                <h1 class="fullName">
                  <%= full_name %>
                </h1>
      
       
      
                <!-- Course Name -->
                <h2 class="courseInterest">
                  <%= course_interest %>
                </h2>
              </div>
            </div>
      
            <!-- Print Button -->
            <div style="text-align: center; margin-top: 20px;">
              <button
                onclick="window.print()"
                style="
                  padding: 10px 20px;
                  font-size: 16px;
                  background-color: #4caf50;
                  color: white;
                  border: none;
                  border-radius: 5px;
                  cursor: pointer;
                "
              >
                Print Certificate
              </button>
            </div>
          <% } else { %>
            <p>Your certificate is locked. Please contact admin to unlock it.</p>
          <% } %>
        </div>
      </main>
      
      
      
