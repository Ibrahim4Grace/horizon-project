.fullName {
  font-family: 'Forte', cursive;
  font-size: 32px;
  color: #333;
  position: absolute; /* Independent positioning */
  top: 360px; /* Adjust to align the name */
  left: 50%; /* Center horizontally */
  transform: translateX(-50%); /* Center alignment fix */
}


.courseInterest {
  font-family: 'Forte', cursive;
  font-size: 32px;
  color: #333;
  position: absolute; 
  top: 424px; 
  left: 50%; 
  transform: translateX(-50%);
}


@media (max-width: 768px) {
  .fullName  {
    font-size: 21px; /* Smaller font for smaller screens */
    top: 37px;
    margin-top: 76px;
  }
  .courseInterest {
    font-size: 21px; /* Smaller font for smaller screens */
    top: 59px;
    margin-top: 76px;
  }
}

  </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
