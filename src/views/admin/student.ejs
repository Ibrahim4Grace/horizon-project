
<%- include (`../partials/adminHtmlTag`); -%>
<body>
  <div
    class="flex h-screen bg-gray-50 dark:bg-gray-900"
    :class="{ 'overflow-hidden': isSideMenuOpen }"
  >

    <%- include (`../partials/adminSidebar`); -%>

    <div class="flex flex-col flex-1 w-full">
      <%- include (`../partials/adminHeader`); -%>
  
      <main class="h-full overflow-y-auto">
        <div class="container px-6 mx-auto grid">
      
       <h4
       class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"
     >
     All students
     </h4>
     <div class="w-full overflow-hidden rounded-lg shadow-xs">
       <div class="w-full overflow-x-auto">
        <table class="w-full whitespace-no-wrap">
          <thead>
            <tr
              class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800" 
            >
              <th class="px-4 py-3">Student</th>
              <th class="px-4 py-3">Course</th>
              <th class="px-4 py-3">Class</th>
              <th class="px-4 py-3">Number</th>
              <th class="px-4 py-3">Pin</th>
              <th class="px-4 py-3">Registration Date</th>
        
            </tr>
          </thead>
          <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
            <% if (students && students.length > 0) { %>
              <% students.forEach(student => { %>
                <tr class="text-gray-700 dark:text-gray-400">
                  <td class="px-4 py-3">
                    <div class="flex items-center text-sm">
   
                      <div
                        class="relative hidden w-8 h-8 mr-3 rounded-full md:block"
                      >

                        <% if (student && student.image && student.image.imageUrl) { %>
                        <img
                        class="object-cover w-full h-full rounded-full"
                          src="<%= student.image.imageUrl %>"
                          alt="Image"
                          width="80"
                          height="80"
                        />
                        <% } else { %>
                        <div style="position: relative; cursor: pointer">
                          <img
                          class="object-cover w-full h-full rounded-full"
                            src="https://bootdey.com/img/Content/avatar/avatar5.png"
                            alt="image"
                       
                          />
                        </div>
                        <% } %>
                        <div
                          class="absolute inset-0 rounded-full shadow-inner"
                          aria-hidden="true"
                        ></div>
                      </div>
                      <div>
                        <p class="font-semibold"><%= student.full_name %></p>
                      
                      </div>
                    </div>
                  </td>
                  <td class="px-4 py-3 text-sm"><%= student.course_interest %></td>
                  <td class="px-4 py-3 text-sm"><%= student.class_option %></td>
                  <td class="px-4 py-3 text-sm"><%= student.phone_number %></td>
                  <td class="px-4 py-3 text-sm">
                    <% if (student.pinDetails && student.pinDetails.pin_number) { %>
                      <%= student.pinDetails.pin_number %>
                    <% } else { %>
                      <span class="text-gray-400">No pin</span>
                    <% } %>
                  </td>
                
                  <td class="px-4 py-3 text-sm"><%= new Date(student.createdAt).toLocaleString('en-US', {
                    weekday: 'short',
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit',
                    hour12: false,
                  }) %></td>
                  
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="5" class="px-4 py-3 text-center text-gray-500">No students found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
       </div>
       <div
         class="grid px-4 py-3 text-xs font-semibold tracking-wide text-gray-500 uppercase border-t dark:border-gray-700 bg-gray-50 sm:grid-cols-9 dark:text-gray-400 dark:bg-gray-800"
       >
  
         <span class="col-span-2"></span>
         <!-- Pagination -->
         <span class="flex col-span-4 mt-2 sm:mt-auto sm:justify-end">
          <nav aria-label="Table navigation">
            <ul class="inline-flex items-center">
          
              <% for (let i = 1; i <= totalPages; i++) { %>
                <li>
                  <a href="/admin/student?page=<%= i %>"
                     class="px-3 py-1 <%= currentPage === i ? 'text-white bg-purple-600' : '' %> rounded-md focus:outline-none focus:shadow-outline-purple">
                    <%= i %>
                  </a>
                </li>
              <% } %>
            </ul>
          </nav>
        </span>
       </div>
     </div>
        </div>
      </main>
    </div>
  </div>
</body>
</html>